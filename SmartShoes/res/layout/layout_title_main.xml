<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageButton 
            android:id="@+id/title_back_btn" 
            android:layout_width="35dp" 
            android:layout_height="35dp" 
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true" 
            android:layout_marginLeft="9dp" 
            android:background="@drawable/title_back_btn" 
            android:visibility="invisible" />
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Smart Shoes"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageButton
            android:id="@+id/title_alarm_add_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:background="@drawable/title_add_btn"
            android:visibility="invisible" />
        
        <ImageButton
            android:id="@+id/title_alarm_save_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:background="@drawable/title_save_btn"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>
